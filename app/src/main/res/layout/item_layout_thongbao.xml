<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/color_BackGround_btnNavigation"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_circle_thongbao"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/movies_fast7"/>
        <TextView
            android:id="@+id/txt_tenphim_thongbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Tên phim"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/img_circle_thongbao"
            />
        <TextView
            android:id="@+id/txt_theloai_thongbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thể loại"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="32dp"
            android:textStyle="italic"
            android:layout_toEndOf="@+id/img_circle_thongbao"/>
        <TextView
            android:id="@+id/txt_ramat_thongbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="dự kiến ra mắt"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="10dp"
            android:textStyle="italic"
            android:layout_toEndOf="@+id/img_circle_thongbao"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>